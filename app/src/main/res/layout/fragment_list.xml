<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header: logo + título -->
    <ImageView
        android:id="@+id/ivLogoSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panel • Secciones"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivLogoSmall"
        app:layout_constraintBottom_toBottomOf="@id/ivLogoSmall"
        app:layout_constraintStart_toEndOf="@id/ivLogoSmall"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Búsqueda -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogoSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar…"
            android:imeOptions="actionSearch"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tilSearch"
        app:layout_constraintBottom_toTopOf="@id/btnRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Tarjeta: Usuarios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/item_usuarios"
                            android:contentDescription="Usuarios" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Usuarios"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:layout_constraintWidth_default="wrap"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gestión de usuarios, perfiles y permisos."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:alpha="0.85"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeeUsuarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Ver detalle"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@android:color/black"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta: Pedidos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/item_pedidos"
                            android:contentDescription="Pedidos" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Pedidos"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consulta y seguimiento de pedidos."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:alpha="0.85"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeePedidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Ver detalle"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@android:color/black"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta: Reportes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/item_reportes"
                            android:contentDescription="Reportes" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Reportes"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visualización de métricas y exportes."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:alpha="0.85"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeeReportes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Ver detalle"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@android:color/black"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Acciones inferiores -->
    <LinearLayout
        android:id="@+id/btnRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ver detalle (demo) - outlined -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoDetailDemo"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Ver detalle (demo)" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- Nuevo / Formulario - negro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Nuevo / Formulario"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
