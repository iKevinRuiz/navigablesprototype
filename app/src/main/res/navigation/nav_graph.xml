<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kevin.navigableprototype.HomeFragment"
        android:label="Inicio">
        <action
            android:id="@+id/action_home_to_list"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/listFragment"
        android:name="com.kevin.navigableprototype.ListFragment"
        android:label="Lista">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_list_to_form"
            app:destination="@id/formFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.kevin.navigableprototype.DetailFragment"
        android:label="Detalle" />

    <fragment
        android:id="@+id/formFragment"
        android:name="com.kevin.navigableprototype.FormFragment"
        android:label="Formulario" />
</navigation>
